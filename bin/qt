#!/bin/csh -f 

set JAVA = /local/java/jdk/bin/java

set baseOTConfigDir	= /jac_sw/orac3/OT/install/cfg
set qtConfig	        = /jac_sw/omp/QT/config/qtSystem.conf

set usage		= "Usage: $0 <telescope> [-h] [-options] \n\nwhere telescope is:\n\tukirt\t\tspecifies the UKIRT widget set\n\tjcmt\t\tspecifies the jcmt widget set\n\nand options include:\n\t-jac\t\tspecifies JAC global configs instead of local user configs\n\t-config file\tspecies the absolute path to the \042file\042 used for this session\n\n\n"

set classic = ""
set xdebug = ""
set xnoagent = ""
set xrunjdwptrans = ""
set xbootclasspath = ""


# set default behaviour to -ql -nosim -noeng for UKIRT 

set tosim = "nosim" 
set toql = "ql" 
set toeng = "noeng" 

set solHost = "kiki"
 
while ($#argv != 0)
   switch ($argv[1])
      case -h:
        printf "${usage}" 
        exit 
      case -jdebug:
        set xdebug = "-Xdebug"
        set xnoagent = "-Xnoagent"
        set xrunjdwptrans = "-Xrunjdwp:transport=dt_socket,address=2112,server=n,suspend=y"
        set xbootclasspath = "-Xbootclasspath:/local/java/jdk/jre/lib/rt.jar:/local/java/jdk/lib/tools.jar"
	echo QT Will be controled by JDEBUG!
        shift
        breaksw

      case -noql: 
        set toql = "noql" 
        echo No quick look specified 
        shift 
        breaksw 
      case -ql: 
        set toql = "ql" 
        echo Quick look specified 
        shift 
        breaksw 
      case -nosim: 
        set tosim = "nosim" 
        echo No simulation specified 
        shift 
        breaksw 
      case -sim: 
        set tosim = "sim" 
        echo Full Simulation specified  
        shift 
        breaksw 
      case -simInst: 
        set tosim = "simInst" 
        echo Instrument Simulation specified  
        shift 
        breaksw 
      case -simTel: 
        set tosim = "simTel" 
        echo Telescope Simulation specified  
        shift 
        breaksw 
      case -eng 
        set toeng = "eng" 
        echo Engineering specified 
        shift 
        breaksw 
      case -noeng 
        set toeng = "noeng" 
        echo Science observing specified 
        shift 
        breaksw 

      case -jac:
        set qtConfig = /jac_sw/omp/QT/config/qtSystem.conf
	set solHost = "lokahi"
        echo Global configs to be used
	echo Solaris host is ${solHost}
        shift
        breaksw
      case -config
        shift
	set qtConfig = $argv[1]
        breaksw
      case -debug
	set debug = true
	echo debug on
        shift
        breaksw
      case ukirt:
        set widgetFile   = /jac_sw/omp/QT/config/qtUkirtWidget.conf
	set instConfigDir = ${baseOTConfigDir}/ukirt
	set telescope	  = Ukirt
        echo Telescope set to use ukirt widget set
        shift
        breaksw
      case jcmt:
        set widgetFile   = /jac_sw/omp/QT/config/qtJcmtWidget.conf
	set instConfigDir = ${baseOTConfigDir}/jcmt
	set telescope	  = Jcmt
        echo Telescope set to use jcmt widget set
        shift
        breaksw
      default:
        echo "No such option"
        exit 1
        breaksw
   endsw
end

if !($?widgetFile) then
    printf "${usage}"
    exit
endif
 
if (! ${?IMP_SCRATCH} && (${HOST} == "kiki")) then
    setenv IMP_SCRATCH /tmp
    echo "IMP_SCRATCH set to /tmp"
else if (! ${?IMP_SCRATCH}) then
    echo "IMP_SCRATCH is not set"
else
    echo "IMP_SCRATCH is set to: ${IMP_SCRATCH}"
endif

#cleanup

set CLASSPATH = /jac_sw/omp/QT/lib/qt.jar:/jac_sw/omp/QT/lib/xerces.jar:/jac_sw/omp/QT/lib/mail.jar:/jac_sw/omp/QT/lib/activation.jar:/jac_sw/omp/QT/lib/soap.jar:/jac_sw/orac3/OT/install/classes:/jac_sw/orac3/GEMINI/install/classes:/jac_sw/itsroot/install/ompSM/classes:/jac_sw/orac3/ORAC/install/classes:/jac_sw/orac3/OMP/install/classes:/jac_sw/orac3/ODB/install/classes:/jac_sw/omp/QT/lib/jsky.jar:/jac_sw/omp/QT/lib/diva.jar:/jac_sw/omp/QT/lib/junit.jar:/jac_sw/omp/QT/icons:/local/java/jdk/lib/tools.jar:/jac_sw/itsroot/install/dcHub/lib/dcHub.jar:/local/progs/drama/drama_source/djava

${JAVA} ${classic} ${xdebug} ${xnoagent} ${xrunjdwptrans} ${xbootclasspath} -Ddebug=${debug} -DSIMULATE=${tosim} -DENGINEERING=${toeng} -DQUICKLOOK=${toql} -Dtelescope=${telescope} -DSOLARIS_HOST=${solHost} -DqtConfig=${qtConfig} -Dot.cfgdir=${instConfigDir}/ -DwidgetFile=${widgetFile} -DOMP -cp ${CLASSPATH} edu.jach.qt.app.Main &
